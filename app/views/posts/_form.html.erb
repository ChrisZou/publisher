<%= form_for @post, :html => { :class => "form-horizontal post" } do |f| %>

  <% if @post.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @post.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label '标题', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :title, :class => 'form-control' %>
    </div>
    <%=f.error_span(:title) %>
  </div>
  <div class="form-group">
    <%= f.label '简书专题', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :jianshu_collection, :class => 'form-control' %>
    </div>
    <%=f.error_span(:jianshu_collection) %>
  </div>
  <div class="form-group">
    <%= f.label '知乎专栏', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :zhihu_collection, :class => 'form-control' %>
    </div>
    <%=f.error_span(:zhihu_collection) %>
  </div>
  <div class="form-group">
    <%= f.label '知乎标签', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :zhihu_tags, :class => 'form-control' %>
    </div>
    <%=f.error_span(:zhihu_tags) %>
  </div>
  <div class="form-group">
    <%= f.label '豆瓣评分', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :douban_rating, :class => 'form-control' %>
    </div>
    <%=f.error_span(:douban_rating) %>
  </div>
  <div class="form-group">
    <%= f.label '稀土掘金、开发者前线分享链接', :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :wechat_gzh_url, :class => 'form-control' %>
    </div>
    <%=f.error_span(:wechat_gzh_url) %>
  </div>

  <div class="form-group">
    <div class="col-lg-6">
      Markdown原稿:
      <%= f.text_area :content, :class => 'form-control' %>
    </div>
    <%=f.error_span(:content) %>
    <div id="post_content_rendered"> <%= raw(@post.render_markdown) %></div>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                posts_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
